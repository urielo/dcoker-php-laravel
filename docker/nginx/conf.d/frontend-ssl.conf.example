upstream app_nuxt_cast {
  server frontend:3000 fail_timeout=0;
}

server {
    listen 80;
    server_name "^(\w+)\.castlight\.com\.br";
    #server_name comerc.castlight.com.br thutor.castlight.com.br;
    location / {
        return 301 https://$host$request_uri;
    }

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
}


server {
    listen 443 ssl;

    ssl_certificate /etc/letsencrypt/live/api-comerc.castlight.com.br/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api-comerc.castlight.com.br/privkey.pem;    
    server_name "~^(\w+)\.castlight\.com\.br";
    # server_name comerc.castlight.com.br thutor.castlight.com.br;

    
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;

        if (!-f $request_filename) {
          proxy_pass http://app_nuxt_cast;
          break;
       }
     }


    error_log /var/log/nginx/front_error.log;
    access_log /var/log/nginx/front_access.log;
}

